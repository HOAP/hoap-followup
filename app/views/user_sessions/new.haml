= form_for @user_session, :url => user_session_path do |f|
  %table{:border => "0"}
    %tr
      %td.left= f.label :login, "Username"
      %td.right= f.text_field :login, :size => 10
    %tr
      %td.left= f.label :password
      %td.right= f.password_field :password, :size => 10
    %tr
      %td.two{:colspan => "2"}
        = f.check_box :remember_me
        = f.label :remember_me
    %tr
      %td.two{:colspan => "2"}
        = f.submit "Login"
